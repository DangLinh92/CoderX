<form action="/users/new" method="POST" enctype="multipart/form-data">
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="inputUserName">User Name</label>
      <input type="text" class="form-control" id="inputUserName" name="name">
    </div>
    <div class="form-group col-md-6">
      <label for="inputPhone">Phone</label>
      <input type="text" class="form-control" id="inputPhone" name="phone">
    </div>
  </div>
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="inputEmail4">Email</label>
      <input type="email" class="form-control" id="inputEmail4" name="email">
    </div>
    <div class="form-group col-md-6">
      <label for="inputPassword4">Password</label>
      <input type="password" class="form-control" id="inputPassword4" name="password">
    </div>
  </div>
  <label for="inputGroupFile02">Avatar</label>
  <div class="form-group">
    <label for="exampleFormControlFile1">upload file avatar</label>
    <input type="file" class="form-control-file" id="exampleFormControlFile1" name="avatar">
  </div>
  <button type="submit" class="btn btn-primary">Register</button>
</form>